{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "build",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@models/*": ["models/*"],
      "@lib/*": ["lib/*"]
    }
  },
  "include": ["src/**/*.ts"]
}